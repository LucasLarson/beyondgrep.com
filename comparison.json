            },
            {
                "what": "Smart case",
                "how": {
                    "ack, ag, rg": "-S --smart-case"
                }
            },
            {
                "what": "Case-sensitive search",
                "how": {
                    "ack": "-I",
                    "ag": "-s --case-sensitive"
                }
            },
            {
                "what": "Match whole words",
                "how": {
                    "ack,ag,git,grep,rg": "-w --word-regexp"

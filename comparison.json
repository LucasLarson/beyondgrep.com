                },
                "what": "Ignore case"
            },
            {
                "what": "Smart case",
                "how": {
                    "ack,ag,rg": "-S --smart-case"
                }
            },
            {
                "what": "Case-sensitive search",
                "how": {
                    "ack": "-I",
                    "ag,rg": "-s --case-sensitive"
                }
            },
            {
                "what": "Match whole words",
                "how": {
                    "ack,ag,git,grep,rg": "-w --word-regexp"
                }
            },
            {
                "what": "Invert match",
                "how": {
                    "ack,ag,git,grep,rg": "-v --invert-match"
                }
            },
            {
                "what": "Match entire line only",
                "how": {
                    "grep,rg": "-x --line-regexp"
